<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor</item>
        <item name="android:textColorSecondary">@color/textSecondaryColor</item>
        <item name="android:buttonStyle">@style/ModernButton</item>
        <item name="alertDialogTheme">@style/ModernAlertDialog</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:textColorPrimary">@color/textPrimaryDarkColor</item>
        <item name="android:textColorSecondary">@color/textSecondaryDarkColor</item>
        <item name="android:buttonStyle">@style/ModernButtonDark</item>
        <item name="alertDialogTheme">@style/ModernAlertDialogDark</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="DarkAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Modern button styles -->
    <style name="ModernButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/modern_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ModernButtonDark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/modern_button_background_dark</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Modern dialog styles -->
    <style name="ModernAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:windowBackground">@drawable/modern_dialog_background</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor</item>
        <item name="android:textColorSecondary">@color/textSecondaryColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/ModernDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ModernDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ModernDialogButtonStyle</item>
    </style>

    <style name="ModernAlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@color/colorBackgroundDark</item>
        <item name="android:windowBackground">@drawable/modern_dialog_background_dark</item>
        <item name="android:textColorPrimary">@color/textPrimaryDarkColor</item>
        <item name="android:textColorSecondary">@color/textSecondaryDarkColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/ModernDialogButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/ModernDialogButtonStyleDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/ModernDialogButtonStyleDark</item>
    </style>

    <style name="ModernDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ModernDialogButtonStyleDark" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Menu labels style -->

    <!-- Modern EditText style -->

    <!-- Ripple styles -->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/white</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

</resources>